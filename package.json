{
  "name": "mvvm-pattern-example",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "npx prettier . --write --ignore-pattern dist",
    "lint": "npx eslint . --fix --ignore-pattern dist",
    "ts-check": "vue-tsc --noEmit",
    "check-dependencies": "npx npm-check-updates",
    "update-dependencies": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "eslint-plugin-vue": "^10.4.0",
    "izitoast": "^1.4.0",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vuetify": "^3.9.5"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.12.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-checker": "^0.10.2",
    "vite-plugin-eslint2": "^5.0.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vue-tsc": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run ts-check"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  }
}
